<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_launcher_background"
    android:backgroundTint="@color/colorPrimaryDark"
    android:backgroundTintMode="multiply"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/titleImageView"
        android:layout_width="363dp"
        android:layout_height="195dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        app:srcCompat="@drawable/tittlewhite"
        tools:layout_editor_absoluteX="24dp"
        tools:layout_editor_absoluteY="64dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="438dp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="42dp">

        <Button
            android:id="@+id/playButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="34dp"
            android:onClick="goToGamePage"
            android:text="PLAY"
            android:textSize="32dp"
            app:icon="@drawable/playbtnsmall"
            tools:layout_editor_absoluteX="121dp"
            tools:layout_editor_absoluteY="333dp" />

        <Button
            android:id="@+id/optionsButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="34dp"
            android:onClick="goToOptions"
            android:text="OPTIONS"
            android:textSize="32dp"
            app:icon="@drawable/settingsbtnsmall"
            tools:layout_editor_absoluteX="88dp"
            tools:layout_editor_absoluteY="434dp" />

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="34dp"
            android:onClick="goToHighScoreBoard"
            android:text="HIGHSCORE"
            android:textSize="32dp"
            app:icon="@drawable/trophyiconsmall"
            tools:layout_editor_absoluteX="64dp"
            tools:layout_editor_absoluteY="531dp" />

        <Button
            android:id="@+id/exitButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="34dp"
            android:onClick="exit"
            android:text="EXIT"
            android:textSize="32dp"
            app:icon="@drawable/closebtnsmall"
            tools:layout_editor_absoluteX="126dp"
            tools:layout_editor_absoluteY="628dp" />

    </LinearLayout>

</RelativeLayout>